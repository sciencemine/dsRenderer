<div class="menu-bar {{if renderMenu 'expand-' 'collapse-'}}menu">
    <div class="menu-controls">
        {{!-- want controls like filtering the list and such to go here --}}
        Menu
    </div>
    {{!-- make the actual list --}}
    <div class="menu-list">
        {{#each-in dsm.ce_set as |key value|}}
            <div class="menu-item">
                {{ce-player ce=value onselect=(action onceselect value)}}
            </div>
        {{/each-in}}
    </div>
</div>
<div class="menu-tag" onmouseenter={{action 'openMenu'}}>
    <div></div>
</div>